<!DOCTYPE html>
<html>
  <head>
    <title>MultitenantApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <!-- Navigation -->
      <div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top" id="mainNav">
          <div class="container">
            <div class="collapse navbar-collapse" id="navbarResponsive">
              <ul class="navbar-nav text-uppercase ml-auto">
                <% if user_signed_in? %>
                  <li class="nav-item"><%= link_to "Home".html_safe, root_path, class: "nav-link" %></li>
                  <li class="nav-item">
                    <%= link_to "Logout".html_safe, destroy_user_session_path, method: :delete, class: "nav-link" %>
                  </li>
                  <li><p class="nav-link"><strong>User: </strong> <em><%= link_to current_user.name, user_path(current_user) %> </em></p></li>
                <% else %>
                  <li class="nav-item"><p class="nav-link">Employee Management</p></li>
                <% end %>
              </ul>
            </div>
          </div>
        </nav>
      </div>
      <div class="container" style="padding-top: 4rem;">
        <% unless flash.empty? %>
          <% flash.each do |k, v| %>
            <% flash_type = k == 'alert' ? 'danger' : 'success' %>
            <div class="alert alert-<%= flash_type %> alert-dismissible">
              <button type="button" class="close" data-dismiss="alert">&times;</button> <%= v %>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="container mt-4">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
