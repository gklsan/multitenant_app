<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, id: :user_email %>
  </div>

  <div class="field hidden">
    <%= form.hidden_field :password, id: :user_password, class: 'hidden', value: 'test1234' %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :user_phone %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, id: :user_address %>
  </div>

  <div class="field">
    <%= form.label :salary %>
    <%= form.number_field :salary, id: :user_salary %>
  </div>

  <div class="field">
    <%= form.label :bonus %>
    <%= form.number_field :bonus, id: :user_bonus %>
  </div>

  <div class="field">
    <%= form.label :department_id %>
    <%= form.number_field :department_id, id: :user_department_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
