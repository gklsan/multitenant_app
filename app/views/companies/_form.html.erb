<%= form_with(model: company, local: true) do |form| %>

  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :company_name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :company_email, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :address %>
    <%= form.text_field :address, id: :company_address, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :company_phone, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :license %>
    <%= form.text_field :license, id: :company_license, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :subdomain %>
    <%= form.text_field :subdomain, id: :company_subdomain, class: "form-control", disabled: true %>
  </div>

  <div class="actions mt-4 mb-5">
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', company_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
